@model Learn_ASP.Models.Item
@{
	ViewData["Title"] = "Edit Item";
}

<h3>Edit Item</h3>

<form asp-action="Edit"
	  method="post">
	<div>
		<label asp-for="Name"></label>
		<input type="text"
			   class="form-control"
			   asp-for="Name" />
	</div>
	<div>
		<label asp-for="Price"></label>
		<input type="number"
			   class="form-control"
			   asp-for="Price" />
	</div>
	<button type="submit"
			class="btn btn-primary mt-3">
		Submit
	</button>
</form>