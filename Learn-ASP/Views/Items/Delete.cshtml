@model Learn_ASP.Models.Item
@{
	ViewData["Title"] = "Delete";
}

<h3> Are you sure to delete this Item?</h3>

<p>@Model.Name</p>
<p>Rp. @Model.Price</p>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id"/>
	<input type="submit" class="btn btn-danger" value="Delete" />
</form>